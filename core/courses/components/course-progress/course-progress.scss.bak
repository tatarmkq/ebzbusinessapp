ion-app.app-root core-courses-course-progress {
    ion-card.card {
        display: flex;
        flex-direction: column;	
	

		/* MTA - mod --> Original values: height: 150px */
        .core-course-thumb {
            height: 0px;
            width: 100%;
            overflow: hidden;
            cursor: pointer;
            pointer-events: auto;
            position: relative;

			
            @for $i from 0 to length($core-course-image-background) {
                &.core-course-color-#{$i} {
                    background: nth($core-course-image-background, $i + 1);
                }
            }
			

            &.core-course-color-img {
                background: white;
            }

