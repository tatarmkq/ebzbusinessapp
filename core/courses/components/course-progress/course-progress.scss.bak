                position: absolute;
                top: 0;
                bottom: 0;
                margin: auto;
            }
        }

        .core-course-link {
            padding-top: 8px;
            padding-bottom: 8px;
            .item-inner {
                @include padding(null, 0, null, null);
            }
            .label {
                display: flex;
                align-items: center;
                justify-content: space-between;
            }
            h2 {
                margins: 6px 0;
                flex-grow: 1;
            }
        }
        .label {
            @include margin(0, 0, 0, null);
        }
		/* MTA - start */
		.ebz_startseitenkurse
		{
			color: green !important;
		}
		/* MTA - end */		
    }
		

    button {
        z-index: 1;
    }
}
